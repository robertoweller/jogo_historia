<Mensagem>:
    orientation:'vertical'
    ScrollView:
        id: posi
        BoxLayout:
            orientation:'vertical'
            id: men
            size_hint:(1, .9)
            # size_hint_y:None
            height:self.minimum_height
    BoxLayout:
        size_hint_y:None
        size_hint_x:None
        height: 50
        width: 50
        Button:
            background_normal: 'img/icons/action_save.gif'
            border: 2, 2, 2, 2
            on_release:root.salva()

    BoxLayout:
        size_hint_y:None
        height: 60
        TextInput:
            id: mifala
            text: '@euu '
        Button:
            text:'+'
            size_hint_x:None
            width:60
            on_release: root.conversa_digitada()


# Me lembrar de fazer de uma forma que não precise ficar adicionando novas classes
<CaylaFala>:
    size_hint_y:None
    height:150/2

    Button:
        border: 0, 0, 0, 0
        background_normal: 'img/personagens/cayla_rosa.png'
        size_hint_y:.9
        size_hint_x:.25/2
        font_size: 30
    Label:
        # Distancia do personagem e o balão
        size_hint_y:.0001
        size_hint_x:.0001
    Button:
        text_size:(400, 0)
        font_size:'20sp'
        halign:'justify'
        background_color: 1, 1, 1, 1
        background_normal: 'img/balao_rosa.png'
        border: 0, 0, 0, 0
        background_down: 'img/balao_rosa.png'
        id: lab
        # Esse  foi um teste de tamanho
        # font_size: 35/2
        size_hint_y:.9/2
        disabled: False

    Label:
        size_hint_y:.2
        size_hint_x:.2

